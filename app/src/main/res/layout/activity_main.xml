<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo:"
        app:layout_constraintBottom_toTopOf="@id/nomeInput"
        app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
        android:id="@+id/nomeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nomeLabel"
    />
    <TextView
        android:id="@+id/telefoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        app:layout_constraintBottom_toTopOf="@id/telefoneInput"
        app:layout_constraintTop_toBottomOf="@id/nomeInput"
        app:layout_constraintLeft_toLeftOf="parent"
    />
    <EditText
        android:id="@+id/telefoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/telefoneLabel"
     />
    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        app:layout_constraintBottom_toTopOf="@id/emailInput"
        app:layout_constraintTop_toBottomOf="@id/telefoneInput"
        app:layout_constraintLeft_toLeftOf="parent"
    />
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailLabel"
    />
    <CheckBox
        android:id="@+id/checkEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailInput"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Ingressar na lista de e-mails"
    />
    <RadioGroup
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/checkEmail"
        >
        <RadioButton
            android:id="@+id/mascBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:layout_weight="1"
        />
        <RadioButton
            android:id="@+id/femBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Feminino"
            android:layout_weight="1"
        />
    </RadioGroup>
    <TextView
        android:id="@+id/cidadeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade:"
        app:layout_constraintTop_toBottomOf="@id/checkBox"
        app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
        android:id="@+id/cidadeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cidadeLabel"
    />
    <TextView
        android:id="@+id/ufLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UF:"
        app:layout_constraintTop_toBottomOf="@id/cidadeInput"
        app:layout_constraintStart_toStartOf="parent"
    />
    <Spinner
        android:id="@+id/ufInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ufLabel"
        android:entries="@array/UFs"
    />
    <Button
        android:id="@+id/botaoSalvar"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ufInput"
        android:text="Salvar"
    />
    <Button
        android:id="@+id/botaoLimpar"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ufInput"
        android:text="Limpar"
    />
</androidx.constraintlayout.widget.ConstraintLayout>